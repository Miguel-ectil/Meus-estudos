	<queryString>
		<![CDATA[select 
	v.id as codigo,
	c.nome as nomecliente,
	v.total as total,
	v.forma_pagamento,
	v.data_venda
from venda as v
join cliente as c on c.id = v.id_cliente
where 1 = 1
and ( v.id_cliente = $P{ID_CLIENTE} or $P{ID_CLIENTE} is null )
and v.data_venda between $P{DATA_INICIO} and $P{DATA_FIM}
order by c.nome, v.data_venda asc]]>
